{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1 class="text-center">Hello! âœ…</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 m-1">
    {% for game in list %}
    <div class="col mb-2">
        <div class="card h-100">
            <img src="{{ game.thumbnail }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{game.title}}</h5>
                <h5 class="card-text">{{game.genre}}</h5>
                <p class="card-text">{{game.short_description}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{game.platform}}</li>
                <li class="list-group-item">{{game.publisher}}</li>
                <li class="list-group-item">{{game.developer}}</li>
                <li class="list-group-item">{{game.release_date}}</li>
            </ul>
            <div class="card-footer">
                <a href="{{game.game_url}}" class="card-link">Card link</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
<div class="navigation">
    {% do list.setPageRange(3) %}
    {{ knp_pagination_render(list, 'knp/pagination.html.twig') }}
</div>
{% endblock %}
